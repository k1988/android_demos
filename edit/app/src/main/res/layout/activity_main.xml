<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhaoxiuyuan.demos.edit.MainActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!--TextView
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:text="
        android:hint=&quot;这是一个默认提示文字&quot;
        android:textColorHint=&quot;#999999&quot;
        android:selectAllOnFocus=&quot;true&quot;"
        android:id="@+id/textView"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/-->

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:hint="搜索框|killFocus时隐藏键盘"
        android:selectAllOnFocus="true"
        android:text=""
        android:textColorHint="#999999"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/editTextFocusUnable"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="FocusableInTouchMode=false|Focusable=false"
        android:selectAllOnFocus="true"
        android:text=""
        android:textColorHint="#999999"
        android:textSize="15sp"
        android:focusableInTouchMode="false"
        android:focusable="false"/>
    <EditText
        android:id="@+id/editTextSend"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="发送框|inputType=default"
        android:selectAllOnFocus="true"
        android:text=""
        android:textColorHint="#999999"
        android:textSize="15sp"
        android:imeOptions="actionSend"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextCustom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:selectAllOnFocus="true"
        android:hint="自定义|inputType=text"
        android:textColorHint="#999999"
        android:textSize="15sp"
        android:inputType="text"
        android:imeActionLabel="自定义"
        android:imeActionId="1024"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnShowKeyboard"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="显示键盘"/>

        <Button
            android:id="@+id/btnHideKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏键盘"/>

        <Button
            android:id="@+id/btnFocusIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切入焦点1"/>
        <Button
            android:id="@+id/btnFocusOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切出焦点1-3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnableFocus"
            android:text="focusable=true|focusableInTouchMode=true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textAllCaps="false"
            />
    </LinearLayout>
</LinearLayout>
