<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhaoxiuyuan.demos.installevent.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Install"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxStartForResult"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonJumpSecond"
        app:layout_constraintVertical_bias="0.174" />

    <Button
        android:id="@+id/buttonJumpSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转新界面"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxUnknownSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EXTRA_NOT_UNKNOWN_SOURCE"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxAllowReplace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EXTRA_ALLOW_REPLACE"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxUnknownSource"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxUnknownSource" />

    <CheckBox
        android:id="@+id/checkBoxReturnResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EXTRA_RETURN_RESULT"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxAllowReplace"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxAllowReplace"
        />

    <CheckBox
        android:id="@+id/checkBoxFlagNewTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FLAG_ACTIVITY_NEW_TASK"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxReturnResult"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxReturnResult"
        android:layout_marginTop="10dp"
        />

    <CheckBox
        android:id="@+id/checkBoxStartForResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="startActivityForResult"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxFlagNewTask"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxFlagNewTask"
        android:layout_marginTop="10dp"
        />
</android.support.constraint.ConstraintLayout>
