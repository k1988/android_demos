<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhaoxiuyuan.alertdialogs.MainActivity">

    <Button
        android:id="@+id/btnProgressDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="进度条" />

    <Button
        android:id="@+id/btnDatePickerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnProgressDialog"
        android:text="日期选择" />

    <Button
        android:id="@+id/btnProgressDialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度条2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnProgressDialog"
        android:layout_toEndOf="@+id/btnProgressDialog"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />
    <Button
        android:id="@+id/btnProgressDialog3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度条3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnProgressDialog2"
        android:layout_toEndOf="@+id/btnProgressDialog2"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:id="@+id/btnAlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标准对话框"
        android:layout_below="@+id/btnTimePickerDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnTimePickerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间选择"
        android:layout_below="@+id/btnDatePickerDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAlertDialogRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单选组对话框"
        android:layout_alignBaseline="@+id/btnAlertDialog"
        android:layout_alignBottom="@+id/btnAlertDialog"
        android:layout_alignLeft="@+id/btnProgressDialog2"
        android:layout_alignStart="@+id/btnProgressDialog2" />

    <Button
        android:id="@+id/btnAlertDialogCheckGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多选组对话框"
        android:layout_alignBaseline="@+id/btnAlertDialogRadioGroup"
        android:layout_alignBottom="@+id/btnAlertDialog"
        android:layout_alignLeft="@+id/btnProgressDialog3"
        android:layout_alignStart="@+id/btnProgressDialog3" />

    <Button
        android:id="@+id/btnCustomAlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义对话框"
        android:layout_below="@+id/btnAlertDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
